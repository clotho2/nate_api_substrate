# OpenRouter Configuration (Required)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Discord Integration (Optional - for Discord bot tool)
DISCORD_BOT_TOKEN=your_discord_bot_token_here
TASKS_CHANNEL_ID=your_tasks_channel_id_here
DEFAULT_USER_ID=your_default_user_id_here

# Spotify Integration (Optional - for Spotify control tool)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REFRESH_TOKEN=your_spotify_refresh_token_here

# Server Configuration
PORT=8284
HOST=0.0.0.0

# Database Configuration
DATABASE_PATH=data/db/miu_state.db
CHROMADB_PATH=data/chromadb

# Agent Configuration
DEFAULT_MODEL=openrouter/polaris-alpha
MAX_TOOL_CALLS_PER_TURN=10


# PostgreSQL Configuration (Optional - for advanced persistence)
# If not set, system uses SQLite only
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=substrate_ai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
