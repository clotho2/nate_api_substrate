# ============================================
# Substrate AI Configuration
# ============================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ============================================
# REQUIRED: OpenRouter API Key
# ============================================
# Get your free API key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Default model to use (required)
DEFAULT_LLM_MODEL=mistralai/mistral-large-2512

# Enable Ollama Cloud
# USE_OLLAMA=false
# OLLAMA_CLOUD_API_KEY=your_ollama_api_key_here
# OLLAMA_API_URL=https://ollama.com
# OLLAMA_MODEL=
# Vision preprocessing (for text-only models like Kimi K2)
# VISION_PREPROCESSING_ENABLED=false
# OLLAMA_VISION_MODEL=llava:13b

# ============================================
# OPTIONAL: PostgreSQL (Advanced Persistence)
# ============================================
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=substrate_ai
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_postgres_password_here

# ============================================
# OPTIONAL: Neo4j (Graph RAG)
# ============================================
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=your_neo4j_password_here

# ============================================
# REQUIRED: Discord Bot Integration
# ============================================
DISCORD_BOT_URL=http://localhost:3001
DEFAULT_USER_ID=your_discord_user_id_number

# Database Paths (for backend server)
SQLITE_DB_PATH=./backend/data/db/substrate_state.db
VERSION_DB_PATH=./backend/data/db/versions.db
COST_DB_PATH=./backend/data/costs.db

# Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=8284

# Model Parameters
N_CTX=262144
DEFAULT_MAX_TOKENS=4096
DEFAULT_TEMPERATURE=0.7

# ============================================
# OPTIONAL: Telegram Integration
# ============================================
# Get bot token from @BotFather on Telegram
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# TELEGRAM_SESSION_ID=telegram_session
# SUBSTRATE_API_URL=http://localhost:8284

# ============================================
# OPTIONAL: Spotify Integration
# ============================================
# SPOTIFY_CLIENT_ID=your_spotify_client_id_here
# SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
# SPOTIFY_REFRESH_TOKEN=your_spotify_refresh_token_here
